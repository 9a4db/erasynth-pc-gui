                    <Button Width="146" Margin="510,263,0,0" Content="Send" HorizontalAlignment="Left" VerticalAlignment="Top" Height="63" Name="uiSweepSend" Click="uiSweepSend_Click" />

                </Grid>
            </TabItem>

            <TabItem Header="REFERENCE" Padding="10">
